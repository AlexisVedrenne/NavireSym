        <div class="row">
            <div class="col-2">
                {{ form_label(form.indicatif,'Indicatif') }}
                {{ form_widget(form.indicatif,{'attr':{'placeholder':'Indicatif du Pays','class':'form-control'}}) }}
            </div>
            <div class="col-2">
                {{ form_label(form.nom,'Nom du Pays') }}
